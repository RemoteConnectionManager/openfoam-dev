FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      boundaryRadiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


".*"
{
    type            boundaryRadiation;
    mode            lookup;
    emissivity      uniform 1.0;
    value           uniform 0;
}

"(region0_to.*)"
{
    type            boundaryRadiation;
    mode            solidRadiation;
    value           uniform 0;
}


